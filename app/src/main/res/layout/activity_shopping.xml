<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/titless" layout="@layout/title"/>

    <FrameLayout
        android:id="@+id/framelayouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_tabs"
        android:layout_below="@+id/titless"/>

    <LinearLayout

        android:id="@+id/ll_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CAC9C9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/ll_mall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_mall"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_home_shopping" />
                <TextView
                    android:id="@+id/tv_mall"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#4b4a4a"
                    android:text="商城"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_category"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_home_category" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#4b4a4a"
                    android:text="分类"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_new"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_new"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/bg_home_new" />
                <TextView
                    android:id="@+id/tv_new"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#4b4a4a"
                    android:text="新品"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shopping"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/iv_shopping"
                    android:layout_width="27dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:src="@drawable/bg_home_shopping_selector" />

                <TextView
                    android:id="@+id/tv_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#4b4a4a"
                    android:text="购物车"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout
        >

</RelativeLayout>

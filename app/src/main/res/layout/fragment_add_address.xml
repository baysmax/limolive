<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:id="@+id/root_view"
    >
    <include
        layout="@layout/standard_title_bar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_padding_margin8"
            android:background="@color/white"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listView_height2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding_margin8"
                android:paddingRight="@dimen/activity_padding_margin8"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size1"
                    android:text="@string/mine_receive_user"
                    />
                <EditText
                    android:id="@+id/edit_receive_man"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_padding_margin8"
                    android:paddingRight="@dimen/activity_padding_margin8"
                    android:maxLines="1"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listView_height2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding_margin8"
                android:paddingRight="@dimen/activity_padding_margin8"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size1"
                    android:text="@string/register_phone"
                    />
                <EditText
                    android:id="@+id/edit_user_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_padding_margin8"
                    android:paddingRight="@dimen/activity_padding_margin8"
                    android:maxLines="1"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listView_height2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding_margin8"
                android:paddingRight="@dimen/activity_padding_margin8"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size1"
                    android:text="@string/mine_province"
                    />
                <TextView
                    android:id="@+id/edit_province"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_padding_margin8"
                    android:paddingRight="@dimen/activity_padding_margin8"
                    android:maxLines="1"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listView_height2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding_margin8"
                android:paddingRight="@dimen/activity_padding_margin8"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size1"
                    android:text="@string/mine_detail_address"
                    />
                <EditText
                    android:id="@+id/edit_detail_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_padding_margin8"
                    android:paddingRight="@dimen/activity_padding_margin8"
                    android:maxLines="1"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_delete_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding_margin8"
            android:layout_marginRight="@dimen/activity_padding_margin8"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_padding_margin8"
            android:text="@string/mine_address_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size1"
            android:background="@drawable/bg_btn_add_address"
            />

    </RelativeLayout>

</LinearLayout>
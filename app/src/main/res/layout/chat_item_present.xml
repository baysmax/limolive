<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/bac_msg"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_chatcontent_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxWidth="250dp"
            android:text="null"
            android:layout_toRightOf="@+id/msg_name_present"
            android:textColor="#ff5454"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/msg_name_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff8a02"
            android:textSize="12dp"
            android:text=""
            />
        <ImageView
        android:id="@+id/msg_present"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/msg_present1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_chatcontent_present"/>
    </RelativeLayout>
</LinearLayout>

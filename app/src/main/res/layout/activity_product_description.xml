            <!--<include layout="@layout/standard_title_bar" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red_bar"
                >

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_return"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_descrption"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/textView19"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fenlei"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_alignBottom="@+id/left_arrow"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>




            <EditText
                android:id="@+id/post_content"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:background="#ffffff"
                android:gravity="top"
                android:hint="说点什么吧..."
                android:maxLength="140"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:textSize="@dimen/textsize_16" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dividing_line_width_height"
                android:background="@color/mine_dividing_line_color" />

            <TextView
                android:id="@+id/post_text_remain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/padding_5"
                android:paddingRight="@dimen/padding_10"
                android:text="0/140"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/textsize_12"
                android:visibility="gone" />

            <HorizontalScrollView
                android:id="@+id/post_scrollview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_10"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/post_pic_container"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_100"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">

                    <com.example.project.limolive.localalbum.widget.FilterImageView
                        android:id="@+id/post_add_pic"
                        android:layout_width="@dimen/size_100"
                        android:layout_height="@dimen/size_100"
                        android:src="@drawable/post_add_pic" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/post_pic_remain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/padding_5"
                android:paddingRight="@dimen/padding_10"
                android:text="0/9"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/textsize_12"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dividing_line_width_height"
                android:background="@color/mine_dividing_line_color" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/pagerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.example.project.limolive.localalbum.widget.AlbumViewPager
                android:id="@+id/albumviewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/album_item_bg" />

            <include
                android:id="@+id/album_item_header_bar"
                layout="@layout/album_item_header_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/red_bar"
            android:text="完成"
            android:textColor="#FFF"
            android:textSize="18dp" />

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="120dp">
    <TextView
        android:id="@+id/tv_mc"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#ef1414"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_avatar1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/white"
        fresco:roundingBorderWidth="2dp"
        fresco:backgroundImage="@mipmap/icon_qq_img"
        android:layout_toEndOf="@+id/tv_mc"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/sdv_avatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="@string/profile_nickname"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvNmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魅力值"
            android:textSize="15dp"
            android:textColor="#90000000"
            android:layout_below="@id/tvNick"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_number"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="156620"
            android:textColor="#90000000"
            android:layout_below="@id/tvNick"
            android:layout_toRightOf="@id/tvNmb"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@id/sdv_avatar1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#22111111"/>
    <View
        android:layout_below="@id/view1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#00000000"/>
</RelativeLayout>
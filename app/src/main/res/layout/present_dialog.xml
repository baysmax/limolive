<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c0ffffff"
    android:gravity="bottom"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/page_prient"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/live_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/live_gift_gold_coins"
                android:textColor="#727272"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/live_room_gift_money"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/public_selece_textcolor"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/gift_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/live_room_gift_pay"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fd6866"
                android:text="@string/live_gift_gold_pay"
                android:textColor="#ffffff"
                android:textSize="15sp" />
            <Button
                android:id="@+id/iv_giftGiveing_button"
                android:layout_width="80dp"
                android:background="@color/colorAccents"
                android:layout_height="50dp"
                android:text="发送"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
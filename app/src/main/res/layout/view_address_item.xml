<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/listView_height1"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/iv_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_change_address"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_padding_margin8"
        />
    <RelativeLayout
        android:layout_toRightOf="@+id/ck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/iv_edit_address"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_padding_margin8"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size4"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/activity_padding_margin8"
            android:layout_marginRight="@dimen/activity_padding_margin8"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size1"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_phone"
            android:layout_marginLeft="@dimen/activity_padding_margin8"
            android:layout_marginRight="@dimen/activity_padding_margin8"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size2"
            android:textColor="@color/text_color1"
            />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/ck"
        android:button="@drawable/ck_select"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:paddingLeft="@dimen/activity_padding_margin5"
    android:paddingRight="@dimen/activity_padding_margin5"
    >

    <TextView
        android:id="@+id/tv_select_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/bg_select_box"
        android:gravity="center"
        android:textSize="@dimen/text_size1"
        android:textColor="@color/text_color4"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width3"
        android:background="@color/line_color2"
        />
    <TextView
        android:id="@+id/tv_select_box1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_size1"
        android:textColor="@color/text_color3"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width3"
        android:background="@color/line_color2"
        />
    <TextView
        android:id="@+id/tv_select_box2"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/bg_select_box"
        android:gravity="center"
        android:textSize="@dimen/text_size1"
        android:textColor="@color/text_color3"
        />
    <TextView
        android:id="@+id/tv_select_cancel"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/button_bg2"
        android:layout_marginTop="@dimen/activity_padding_margin8"
        android:gravity="center"
        android:textSize="@dimen/text_size4"
        android:textColor="@color/red_bar"
        android:layout_marginBottom="@dimen/activity_padding_margin8"
        />



</LinearLayout>
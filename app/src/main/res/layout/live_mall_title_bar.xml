<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:gravity="center_vertical"
    android:background="@color/red_bar"
    >

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:background="@drawable/title_tab_bg"
        android:layout_centerVertical="true"
        android:clickable="false" >

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/title_text_style"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/left_layout2"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:background="@drawable/title_tab_bg"
        android:layout_toRightOf="@+id/left_layout"
        android:clickable="false" >

        <ImageView
            android:id="@+id/left_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/left_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/title_text_style"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/title_bar_title_size" />

    <RelativeLayout
        android:id="@+id/right_layout2"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:background="@drawable/title_tab_bg"
        android:clickable="false"
        android:layout_toLeftOf="@+id/right_layout"
        >

        <ImageView
            android:id="@+id/right_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/right_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/title_text_style"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:background="@drawable/title_tab_bg"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/title_text_style"
            />
    </RelativeLayout>

</RelativeLayout>
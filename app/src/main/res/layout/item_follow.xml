<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="14dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/white"
            fresco:backgroundImage="@mipmap/icon_qq_img"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/nick"
            android:layout_toRightOf="@id/avatar"
            android:layout_width="wrap_content"
            android:text="自挂东南枝"
            android:maxEms="10"
            android:textSize="16dp"
            android:textColor="#98000000"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/mlz"
            android:layout_toRightOf="@id/avatar"
            android:layout_width="wrap_content"
            android:layout_below="@id/nick"
            android:text="魅力值 "
            android:layout_marginTop="10dp"
            android:textColor="#98000000"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_follow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/follow"/>
            <TextView
                android:id="@+id/Num"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textSize="12dp"
                android:textColor="#5a000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23549843人观看"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <com.example.project.limolive.view.RoundCornersImageView
            android:id="@+id/rciv_largeImgs"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dafault_head"/>
        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/iv_isLives"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wkb"/>

    </RelativeLayout>

</LinearLayout>
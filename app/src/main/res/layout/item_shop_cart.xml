<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/mine_cart_item_height"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/iv_good_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_cart_select"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_padding_margin8"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_good_image"
        android:layout_width="@dimen/mine_cart_item_image_width"
        android:layout_height="@dimen/mine_cart_item_image_height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_good_select"
        android:layout_marginLeft="@dimen/activity_padding_margin5"
        />
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_good_image"
        android:layout_marginLeft="@dimen/activity_padding_margin5"
        android:layout_marginRight="@dimen/activity_padding_margin8"
        android:layout_alignTop="@+id/iv_good_image"
        android:layout_marginTop="@dimen/activity_padding_margin5"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/text_size1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_good_image"
        android:layout_marginRight="@dimen/activity_padding_margin8"
        android:layout_alignBottom="@+id/iv_good_image"
        android:layout_marginBottom="@dimen/activity_padding_margin8"
        >
        <LinearLayout
            android:id="@+id/ll_region_calculator"
            android:layout_width="@dimen/mine_cart_item_calculator"
            android:layout_height="@dimen/mine_cart_item_calculator_height"
            android:orientation="horizontal"
            android:background="@drawable/box_icon_back"
            android:layout_alignParentRight="true"
            >
            <Button
                android:id="@+id/btn_reduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/text_color1"
                android:text="-"
                />
            <View
                android:layout_width="@dimen/line_width3"
                android:layout_height="match_parent"
                android:background="@color/text_color1"
                />
            <TextView
                android:id="@+id/tv_number_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size1"
                android:text="0"
                />
            <View
                android:layout_width="@dimen/line_width3"
                android:layout_height="match_parent"
                android:background="@color/text_color1"
                />
            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/text_color1"
                android:text="+"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FF533B"
            android:textSize="@dimen/text_size1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_padding_margin6"
            android:layout_toLeftOf="@+id/ll_region_calculator"
            />
    </RelativeLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical">

    <include layout="@layout/standard_title_bar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width3"
        android:background="@color/line_color2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#fff"
            android:orientation="vertical">

            <!--待付款-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/wait_for_pay"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_storge_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="件"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />


            <!--待发货-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/wait_for_send"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_send_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="件"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />


            <!--已发货-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/already_for_send"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_already_send_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="件"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />

            <!--退款中-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/reback_for_money_ing"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_wait_for_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="件"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />

            <!--待评价-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/wait_for_comment"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_reback_money_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />

            <!--物流跟踪-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/follow_for_trans_news"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_follow_trans_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="10"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />

            <!--订单-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:text="@string/orders"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/right_arrow"
                    android:padding="10dp"
                    android:text="件"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width3"
                android:background="@color/line_color2" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>

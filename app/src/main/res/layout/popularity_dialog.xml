<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textColor="#ffba15"
                    android:text="土豪排行榜TOP"/>
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_s"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </ScrollView>


            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="25dp"
                    android:background="@drawable/top_nums"/>
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_toRightOf="@id/tv_number"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="45dp"
                    android:src="@drawable/dafault_head"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="秋明山车神"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费值 52564"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="12dp"
                    android:textColor="#6000"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_10000"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:paddingLeft="8dp"
                        android:paddingTop="6dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="6dp"
                        android:textColor="#9000"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btns_bgfw"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_50000"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:paddingLeft="8dp"
                        android:paddingTop="6dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btns_bgfw"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_100000"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:paddingLeft="8dp"
                        android:paddingTop="6dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btns_bgfw"/>
                </FrameLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_recharged"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg14"
                android:textColor="#ffba15"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:text="充值"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
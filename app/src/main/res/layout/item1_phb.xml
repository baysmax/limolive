<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#ffffff"
    android:layout_height="170dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line_color3"/>
    <TextView
        android:id="@+id/tv_mc1"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/diyi"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/white"
                fresco:roundingBorderWidth="2dp"
                fresco:backgroundImage="@mipmap/icon_qq_img"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNickname"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_nickname"/>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_meiliz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="魅力值"/>
            <TextView
                android:id="@+id/tv_mlz"
                android:text="21314"
                android:textSize="17dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_meiliz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:paddingLeft="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/top"/>

    <View
        android:id="@+id/v1"
        android:layout_below="@id/rl1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_color3"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    >
    <include
        layout="@layout/standard_title_bar"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width3"
        android:background="@color/line_color2"
        android:layout_marginTop="@dimen/activity_padding_margin8"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/edit_change_info"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_padding_margin8"
            android:paddingRight="@dimen/activity_padding_margin8"
            />
        <ImageView
            android:id="@+id/iv_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/activity_padding_margin8"
            />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width3"
        android:background="@color/line_color2"
        />
</LinearLayout>
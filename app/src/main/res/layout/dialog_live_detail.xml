<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="直播结束"
        android:textColor="#D63F41"
        android:textSize="34sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_shichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_shichang"
            android:text="1:20:30"
            android:textColor="#D63F41"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302"
            android:textColor="#D63F41"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_members"
            android:text="人看过"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <!-- 获赞数量 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_admires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302"
            android:textColor="#D63F41"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_admires"
            android:text="点赞"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_get_NMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="302"
            android:layout_toRightOf="@+id/tv"
            android:textColor="#D63F41"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柠檬币收益："
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_shareTo"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="分享到"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/iv_chat"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/chat" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_chat"
            android:src="@mipmap/qq" />

        <ImageView
            android:id="@+id/iv_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_qq"
            android:padding="15dp"
            android:src="@mipmap/weibo" />

        <ImageView
            android:id="@+id/iv_colect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_weibo"
            android:padding="15dp"
            android:src="@mipmap/colect" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_save"
        android:layout_width="280dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_savelve_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="保存直播"
        android:textColor="#D63F41"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_savelve_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="返回首页"
        android:textColor="#D63F41"
        android:textSize="18sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/btn_delete"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除直播"
        android:textColor="#D63F41"
        android:textSize="18sp" />

</LinearLayout>

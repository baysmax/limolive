<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3FB"
    android:orientation="vertical">

    <include layout="@layout/standard_title_bar" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#F4F3FB"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入黑名单"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#444444"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_open_closs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_setting_closs_open_selector"
           />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_detFrend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_sendmsg_button1"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除好友"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>

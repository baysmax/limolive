<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/live_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/live_room_gift_tab_hot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_hot"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_room_gift_tab_fun"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_fun"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/live_room_gift_tab_luxury"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_luxury"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/live_room_gift_tab_super"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_exclusive"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/live_room_gift_tab_special"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_special"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_room_gift_tab_store"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/live_gift_tab_store"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/iv_index"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/public_selece_textcolor" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/ns_livetab_line_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/live_room_gift_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:background="@color/live_bg" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/live_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/live_gift_gold"
                android:textColor="#727272"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/live_room_gift_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/public_selece_textcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/live_gift_gold_coin"
                android:textColor="#727272"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/live_room_gift_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/public_selece_textcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/live_room_gift_pay"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/live_gift_gold_pay"
            android:textColor="#ff2f58"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/live_line" />

    <LinearLayout
        android:id="@+id/gift_count_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/gift_amount_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="数量:"
                android:textColor="@color/text_color_title"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/count_layout"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/giftcount_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:src="@drawable/ns_live_audience_arrow_pressed" />

                <TextView
                    android:id="@+id/live_room_gift_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/giftcount_layout"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/text_color_title"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift_object_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="赠:"
                android:textColor="@color/text_color_title"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/send_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sendname_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:src="@drawable/ns_live_audience_arrow_pressed" />

                <TextView
                    android:id="@+id/live_room_gift_sendname"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/sendname_layout"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_title"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/iv_giftGiveing_button"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/live_send_gift"
                android:text="赠送"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>